<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ViewServlet</servlet-name>
        <servlet-class>edu.tw.servlet.ViewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CriteriaServlet</servlet-name>
        <servlet-class>edu.tw.servlet.CriteriaViewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CriteriaServlet</servlet-name>
        <url-pattern>/criteria</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>edu.tw.servlet.AboutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>edu.tw.servlet.ProjectController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>
